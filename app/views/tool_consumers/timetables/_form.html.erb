<%= form_with(model: timetable, url: (timetable.new_record? ? [@tool_consumer,timetable] : timetable), local: true) do |form| %>
  <% if timetable.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(timetable.errors.count, "error") %> prohibited this timetable from being saved:</h2>

      <ul>
      <% timetable.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <%= form.text_field :name, id: :timetable_name , class: 'col-sm-3'%>
  </div>

  <div class="field form-group row">
    <%= form.label :lti_context, class: 'col-sm-2 col-form-label' %>
    <%= form.select :lti_context_id, @lti_contexts.collect {|context| [context.label, context.id]}, {include_blank: '-- Select one --'}, { class: 'col-sm-3'} %>
  </div>

  <hr>
  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
