<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table class="table table-hover mt-3">
  <thead class="thead-light">
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.date.nil? ? 'NULL' : attendance.date.strftime("%d/%m/%Y %H:%M:%S") %></td>
        <td><%= attendance.timetable_unit.name %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

