<%= form_with(model: lti_context, local: true) do |form| %>
  <% if lti_context.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lti_context.errors.count, "error") %> prohibited this lti_context from being saved:</h2>

      <ul>
      <% lti_context.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= form.label :lti_id, 'Internal LTI-ID', class: 'col-sm-2 col-form-label' %>
    <%= form.number_field :lti_id, id: :lti_context_lti_id, class: 'col-sm-3' %>
  </div>

  <div class="field form-group row">
    <%= form.label :label, class: 'col-sm-2 col-form-label' %>
    <%= form.text_field :label, id: :lti_context_label, class: 'col-sm-3' %>
  </div>

  <div class="field form-group row">
    <%= form.label :title, class: 'col-sm-2 col-form-label' %>
    <%= form.text_field :title, id: :lti_context_title, class: 'col-sm-3' %>
  </div>
  <hr>
  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
  <hr>
<% end %>
